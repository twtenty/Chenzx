<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductdetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv2_shopdetail"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/price_shopdetail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FF0000"
            android:text="¥32.9"
            android:textSize="30sp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textColor="#FFF"/>

        <LinearLayout
            android:id="@+id/bk_shopdetail"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/price"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bk_1_shopdetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#CCCC"
                android:text=" 广告 "
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_ad"/>

            <TextView
                android:id="@+id/bk_2_shopdetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textColor="#F76"
                android:text=" 先用后付 "
                android:textSize="15sp"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/bk_3_shopdetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textColor="#F76"
                android:text=" 包邮 "
                android:textSize="15sp"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/bk_4_shopdetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#F76"
                android:text=" 公益 "
                android:textSize="15sp"
                android:background="@drawable/border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/name2_shopdetail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/background"
            android:text="天猫"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/introduce2_shopdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  郑州销量过百 正品保证 宝宝馋了溶豆豆婴儿无添加剂"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/dianou_shopdetail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="店铺"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/kefu_shopdetail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="客服"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shoucang_shopdetail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="收藏"
                    android:textSize="15sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/gwc_shopdetail"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border_left"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/border_right"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="#FFF"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>