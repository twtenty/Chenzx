<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contacts2_touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/contacts_touxiang" />

    <LinearLayout
        android:id="@+id/contacts2_xinxi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/contacts2_touxiang"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contacts2_name"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:layout_height="25dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="名字"/>

        <TextView
            android:id="@+id/contacts2_phone"
            android:layout_width="match_parent"
            android:maxWidth="250dp"
            android:layout_height="25dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="手机号"/>

    </LinearLayout>

    <Button
        android:id="@+id/contacts2_contactsadd"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_toRightOf="@id/contacts2_xinxi"
        android:background="@drawable/border_sousuo"
        android:text="添加"
        android:textSize="20sp"
        android:textColor="#FFF"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>