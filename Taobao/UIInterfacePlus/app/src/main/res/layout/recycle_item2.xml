<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="166dp"
        android:layout_height="186dp"
        android:src="@drawable/fruit" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:text="天猫"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/introduce2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="郑州销量过百 正品保证 宝宝馋了溶豆豆婴儿无添加剂"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/introduce2"
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:text="店铺已被40.8万人圈粉"/>

        <TextView
            android:id="@+id/ju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:layout_below="@id/fans"
            android:layout_marginTop="10dp"
            android:text=" 聚 "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ju"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:layout_below="@+id/fans"
            android:textColor="#FFA500"
            android:text="¥32.9"/>

        <TextView
            android:id="@+id/payed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/price"
            android:layout_marginTop="20dp"
            android:layout_below="@id/fans"
            android:textColor="#CCCCCC"
            android:text=" 3731人付款"/>

        <LinearLayout
            android:id="@+id/bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bk_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCC"
                android:text=" 广告 "
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_ad"/>

            <TextView
                android:id="@+id/bk_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="#F76"
                android:text=" 先用后付 "
                android:textSize="15sp"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/bk_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="#F76"
                android:text=" 包邮 "
                android:textSize="15sp"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/bk_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F76"
                android:text=" 公益 "
                android:textSize="15sp"
                android:background="@drawable/border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bk"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#CCCC"
            android:text="宝宝馋了旗舰店"/>

        <ImageView
            android:id="@+id/gwc"
            android:layout_width="40dp"
            android:layout_height="29dp"
            android:layout_below="@id/bk"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="3dp"
            android:layout_toRightOf="@id/dp"
            android:src="@drawable/gouwuiche" />

    </RelativeLayout>


</LinearLayout>